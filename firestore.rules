
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access for development purposes.
    // WARNING: This is insecure. You should secure your database before going to production.
    // For example, you can restrict access to authenticated users:
    // match /{document=**} {
    //   allow read, write: if request.auth != null;
    // }
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
